<% include header.ejs %>

<div class="ui main text container segment">
<div class="ui huge header">Edit <%= blog.title %></div>
    <form action="/blogs" method="POST" action="/blogs/<%= blog._id %>?_method=PUT" class="ui form">
        <div class="field">
            <label for="blog[title]">Title</label>
            <input name="blog[title]" type="text" value="<%=  blog.title %>">
        </div>
        <div class="field">
                <label for="blog[image]">Image</label>
                <input name="blog[image]" type="text" value="<%= blog.image %>">
        </div>
        <div class="field">
                <label for="blog[body]">Blog Content</label>
                <textarea name="blog[body]" cols="30" rows="10"><%= blog.body %></textarea>
        </div>
        <input type="submit" class="ui violet basic big button">
    </form>
</div>


<% include footer.ejs %>